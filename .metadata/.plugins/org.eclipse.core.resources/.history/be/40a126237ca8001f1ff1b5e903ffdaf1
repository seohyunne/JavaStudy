package Ex6_Student;

public class Student {
	String name;
	int ban;
	int no;
	int kor;
	int eng;
	int math;
	
	Student(){};
	
	public Student(String name, int ban, int no, int kor, int eng, int math) {
		super();
		this.name = name;
		this.ban = ban;
		this.no = no;
		this.kor = kor;
		this.eng = eng;
		this.math = math;
	}
	
	public String info() {
		 return name+","+ban+","+no+","+kor+","+eng+","+math+","+(kor+eng+math)+","+(kor+eng+math)/3;
	}
}
